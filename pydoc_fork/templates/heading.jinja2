<table class="heading">
    <tr style="background-color: {{ bgcol }};">
        <td class="title" style="vertical-align: bottom">&nbsp;<br>
            <span style="color: {{ fgcol }}; font-family: helvetica, arial,sans-serif;">
            &nbsp;<br>{{ title }}
            </span>
        </td>
        <td style="vertical-align: bottom; text-align: right;">
            <span style="color: {{ fgcol }}; font-family: helvetica, arial,sans-serif;">
                {% if extras %}{{ extras }}{% else %}'&nbsp;'{% endif %}
            </span>
        </td>
    </tr>
</table>
